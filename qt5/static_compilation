project(SolarTrackerInterface2)
cmake_minimum_required(VERSION 2.8)

# Find includes in corresponding build directories
set(CMAKE_INCLUDE_CURRENT_DIR ON)

# Instruct CMake to run moc automatically when needed.
set(CMAKE_AUTOMOC ON)
set(CMAKE_AUTOUIC ON)

# Find the QtWidgets library
find_package(Qt5Widgets)
find_package(Qt5Core COMPONENTS Qt5SerialPort REQUIRED)
find_package(Qt5Gui)


aux_source_directory(. SRC_LIST)
add_executable(${PROJECT_NAME} ${SRC_LIST})


# Use the Widgets module from Qt 5.
qt5_use_modules(${PROJECT_NAME} Core SerialPort)
target_link_libraries(${PROJECT_NAME} Qt5::Widgets Qt5::Core Qt5::SerialPort Qt5::Gui)
